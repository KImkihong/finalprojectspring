<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="comment">
	<!-- maxnum구하기 -->
   <select id="maxNumOfCommenet" resultType="int">
      select nvl(max(com_num),0) from comment
   </select>
   <!-- 같은 그룹 중 restep보다 큰 값은 모두 +1 -->
   <update id="updateRestepOfCommenet" parameterType="HashMap">
      <![CDATA[
         update comment set restep=restep+1 where regroup=#{regroup} and restep>#{restep}
      ]]>
   </update>
	<insert id="insertOfComment" parameterType="comment_dto">
		insert into comment values (0,#{content},#{image},#{regroup},#{restep},#{relevel},now(),#{rec_num},#{email})
	</insert>
</mapper>