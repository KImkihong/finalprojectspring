<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ranking">
	<!-- 쉐프 순위 가져오기 -->
	<select id="chefSorting" parameterType="HashMap" resultType="chef_dto">
		select * from chef order by ${standard} desc limit #{start},#{end}
	</select>
	
	<!-- 내가 소식받기한 provider들 -->
	<select id="getProviders" parameterType="HashMap" resultType="String">
		select provider from news where receiver=#{receiver} limit #{start},#{end}
	</select>
	<!-- provider들의 정보-->
	<select id="getProviderInfo" parameterType="String" resultType="chef_dto">
		select * from chef where email=#{provider}
	</select>
	<!-- provider들의 recipe -->
	<select id="getProvderRecipe" parameterType="String" resultType="recipe_dto">
		select * from recipe where email=#{provider} order by writeday desc limit 0,3
	</select>
	
</mapper>