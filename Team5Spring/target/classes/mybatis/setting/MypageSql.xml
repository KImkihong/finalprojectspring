<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mypage">
	<!-- 로그인된 회원의 레시피들 -->
	<select id="getMyRecipe" parameterType="String" resultType="recipe_dto">
		select * from recipe where email=#{email}
	</select>
	<!-- 로그인된 회원이 스크랩한 레시피번호 -->
	<select id="getMyScrap" parameterType="String" resultType="int">
		select rec_num from scrap where email=#{email}
	</select>
	<!-- 스크랩한 레시피 -->
	<select id="getMyScrapRecipe" parameterType="int" resultType="recipe_dto">
		select * from recipe where rec_num=#{rec_num}
	</select>
</mapper>